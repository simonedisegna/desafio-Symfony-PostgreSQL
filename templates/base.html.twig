<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>
            {% block title %}
                Teste Vox
            {% endblock %}
        </title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
        <link href="{{ asset('css/estilo.css') }}" rel="stylesheet" />
        <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/dt-1.11.5/datatables.min.css" />
        <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/dt-1.11.5/datatables.min.js"></script>        

        {% block stylesheets %}{% endblock %}

        {% block javascripts %}
            {% block importmap %}
                {{ importmap('app') }}
            {% endblock %}
        {% endblock %}
    </head>
    <body>
        <nav class='navbar navbar-expand navbar-dark bg-dark'>
            <div class='container'>
                {% if is_granted('ROLE_USER') %}}
                <div class='collapse navbar-collapse'>
                    <ul class='navbar-nav'>
                       <!-- <li class='nav-item'><a class='nav-link' style='color:#fff' href="#" >Admin</a></li>-->
                        <li class='nav-item'><a class='nav-link' style='color:#fff' href="{{ path('empresa_index') }}" >Empresas</a></li>                       
                        <li class='nav-item'><a class='nav-link' style='color:#fff' href="{{ path('app_api') }}" target='_blank' title='Retorna todas empresas com seus respetivos sócios em JSON'>API</a></li>
                        <li class='nav-item'><a class='nav-link' style='color:#fff' href="{{ path('logout_index') }}" >Sair</a></li>
                     </ul>
                </div>
                <div class='col-md-3 test-end'>
                    <span style='color:#fff'>Usário: {{ app.user.username }}
                </div>
                {% else %}}
                <div class='collapse navbar-collapse'>
                    <ul class='navbar-nav'>
                        <li class='nav-item'><a class='nav-link' style='color:#fff' href="{{ path('register_index') }}" >Registrar</a></li>                        
                    </ul>
                </div>
                {% endif %}
                
            </div>       
        </nav>
        {% block body %}{% endblock %}
    </body>
</html>

