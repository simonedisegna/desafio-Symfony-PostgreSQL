{% extends 'base.html.twig' %}

{% block title %}Login
{% endblock %}

{% block body %}
	<div class="container" id='principal-login'>
		<h3>Quadro Societário</h3>
        <h4>Login</h4>
		{% if erro %}
			<div>{{ erro.messageKey|trans(erro.messageData, 'security') }}</div>
		{% endif %}
		<form action='{{ path('login_index') }}' method='post'>
			<input type='hidden' name='_target_path' value='/empresa'/>
			<div class="form-group">
				<label for='username' class='form-label'>Usuário:</label>
				<input type='text' name='_username' id='username' value='{{ultimoUsuario}}' class='form-control'/>
			</div>
			<div class="form-group">
				<label for='password' class='form-label'>Senha:</label>
				<input type='password' name='_password' id='usernampassworde' class='form-control'/>
			</div>
			<button type='submit' class='btn btn-primary'>Entrar</button>
		</form>
	</div>
{% endblock %}
